@import "../../assets/stylus/mixins.styl"
.footer_guide
  font-size 0
  width 100%
  height (98/$rem)
  background #fafafa
  position fixed
  left 0
  bottom 0
  z-index: 5
  display flex
  flex-flow row nowrap
  align-items center
  justify-content space-around
  .item
    text-align center
    .icon
      display inline-block
      width (40/$rem)
      height (40/$rem)
      background-image url("./images/icon.png")
      background-repeat no-repeat
      background-size (40/$rem 490/$rem)
      &.msite
        background-position 0 (-250/$rem)
        &.active
          background-position 0 (-200/$rem)
      &.goods
        background-position 0 (-350/$rem)
        &.active
          background-position 0 (-300/$rem)
      &.classify
        background-position 0 (-150/$rem)
        &.active
          background-position 0 (-100/$rem)
      &.shopcart
        background-position 0 (-50/$rem)
        &.active
          background-position 0 0
      &.profile
        background-position 0 (-450/$rem)
        &.active
          background-position 0 (-400/$rem)
    .text
      margin-top (7/$rem)
      display block
      font-size (24/$rem)
      &.active
        color #b4282d
